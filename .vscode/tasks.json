{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C++ Build (Debug)",
      "command": "/bin/bash",
      "args": [
        "-c",
        "mkdir -p \"${workspaceFolder}/Compile/${relativeFileDirname}\" && /usr/bin/clang++ -std=c++17 -g -O0 \"${file}\" -o \"${workspaceFolder}/Compile/${relativeFileDirname}/${fileBasenameNoExtension}_debug\""
      ],
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Debug build with no optimization and full symbols."
    },
    {
      "type": "cppbuild",
      "label": "C++ Build (Release)",
      "command": "/bin/bash",
      "args": [
        "-c",
        "mkdir -p \"${workspaceFolder}/Compile/${relativeFileDirname}\" && /usr/bin/clang++ -std=c++17 -O2 \"${file}\" -o \"${workspaceFolder}/Compile/${relativeFileDirname}/${fileBasenameNoExtension}_release\""
      ],
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Release build with optimizations enabled."
    }
  ]
}