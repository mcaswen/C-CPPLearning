{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: clang++ 生成活动文件",
  
        "command": "/bin/bash",
        "args": [
          "-c",
          "mkdir -p \"${workspaceFolder}/Compile\" && /usr/bin/clang++ -fcolor-diagnostics -fansi-escape-codes -g \"${file}\" -o \"${workspaceFolder}/Compile/${fileBasenameNoExtension}\""
        ],
  
        "options": { "cwd": "${fileDirname}" },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "整理可执行文件至Compile目录"
      }
    ]
  }